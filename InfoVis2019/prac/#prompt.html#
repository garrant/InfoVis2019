    <script src="vec3.js"></script> 
    <script>
      var x0 = parseInt(prompt("x0を入力してください"));
      var y0 = parseInt(prompt("y0を入力してください"));
      var z0 = parseInt(prompt("z0を入力してください"));
      var x1 = parseInt(prompt("x1を入力してください"));
      var y1 = parseInt(prompt("y1を入力してください"));
      var z1 = parseInt(prompt("z1を入力してください"));
      var x2 = parseInt(prompt("x2を入力してください"));
      var y2 = parseInt(prompt("y2を入力してください"));
      var z2 = parseInt(prompt("z2を入力してください"));

      var v0 = new Vec3(x0,y0,z0);
      var v1 = new Vec3(x1,y1,z1);
      var v2 = new Vec3(x2,y2,z2);

      var v0v1 = sub(v0,v1);
      var v0v2 = sub(v0,v2);

      var s = AreaOfTriangle(v0v1,v0v2);
      s = Math.floor(s * 10) / 10;

      document.write("v0 = ["+ x0 +","+ y0 + "," + z0 + "]<br>" , "v1 = ["+ x1 +"," + y1 + "," + z1 + "]<br>" , "v2 = ["+ x2+"," + y2 + ","  + z2 + "]<br>")

      document.write("Area of a triangle = " + s);
    </script>
